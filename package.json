{
  "name": "electron-template",
  "version": "0.1.0",
  "private": true,
  "author": "aoki <ringohub@gmail.com>",
  "description": "Electron sandbox",
  "homepage": ".",
  "main": "build/electron/main.js",
  "repository": {
    "url": "https://github.com/aoki/electron-template"
  },
  "dependencies": {
    "@monaco-editor/react": "^3.4.1",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "^12.0.11",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-jsx": "^2.2.8",
    "@zeit-ui/react": "^1.7.6",
    "@zeit-ui/react-icons": "^1.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "styled-jsx": "^3.3.0",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "customize-cra": "^1.0.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.7.0",
    "react-app-rewired": "^2.1.6",
    "wait-on": "^5.0.1"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron --disable-gpu .\"",
    "app": "npm run build && tsc -p electron && electron-builder",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "clean": "rm -rf ./build",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
